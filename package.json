{
    "name": "ostafinski",
    "type": "module",
    "version": "1.1.0",
    "description": "Personal blog template built with Astro.",
    "author": "ostafinskim",
    "license": "GPL-3.0-only",
    "repository": {
        "type": "git",
        "url": "https://github.com/ostafinskim"
    },
    "keywords": [
        "astro",
        "astrojs",
        "astro-template",
        "astro-blog",
        "astro-b"
    ],
    "bugs": {
        "url": "https://github.com/ostafinskim/ostafinski.cc/issues"
    },
    "scripts": {
        "dev": "npx tinacms dev -c \"astro dev\"",
        "start": "astro dev",
        "build": "astro build",
        "sync": "astro sync",
        "preview": "astro preview",
        "postbuild": "pagefind --site dist",
        "format:check": "prettier --plugin-search-dir=. --check .",
        "format": "prettier --plugin-search-dir=. --write .",
        "lint": "eslint .",
        "pre-commit": "lint-staged",
        "prepare": "husky install"
    },
    "dependencies": {
        "@astrojs/rss": "4.0.6",
        "astro": "4.10.2",
        "astro-font": "^0.0.81",
        "tailwind-merge": "^2.3.0"
    },
    "devDependencies": {
        "@astrojs/mdx": "3.1.0",
        "@astrojs/sitemap": "3.1.5",
        "@astrojs/tailwind": "5.1.0",
        "@pagefind/default-ui": "^1.1.0",
        "@tailwindcss/typography": "0.5.13",
        "@tinacms/cli": "^1.5.46",
        "@typescript-eslint/parser": "^7.13.0",
        "clsx": "2.1.1",
        "eslint": "^9.4.0",
        "eslint-plugin-astro": "^1.2.2",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "husky": "^9.0.11",
        "lint-staged": "^15.2.6",
        "mdast-util-to-string": "^4.0.0",
        "motion": "^10.18.0",
        "pagefind": "^1.1.0",
        "prettier": "^3.3.2",
        "prettier-config-standard": "^7.0.0",
        "prettier-plugin-astro": "^0.14.0",
        "reading-time": "^1.5.0",
        "slugify": "^1.6.6",
        "tailwindcss": "3.4.4",
        "tinacms": "^1.6.4",
        "typescript": "^5.4.5"
    },
    "lint-staged": {
        "*.{astro,js,jsx,ts,tsx,md,mdx,json}": [
            "prettier --write --plugin-search-dir=."
        ]
    }
}

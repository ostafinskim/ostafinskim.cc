---
import Layout from 'layouts/Layout.astro';
---

<Layout title='Not Found'>
	<div class='flex flex-col justify-center items-center max-w-2xl m-auto'>
		<h1
			class='font-bold tracking-tight mb-4'
		>
			404
		</h1>
		<h2 class='font-bold tracking-tight mb-4'>
			Page Not Found
		</h2>
		<p class=' mb-8'>
			The page you are looking for does not exist.
		</p>
		<a>
			<a
				href='/'
				class='p-2 sm:p-4 w-64 font-bold mx-auto bg-slate-100 dark:bg-slate-900 text-center rounded-md'
			>
				Return Home
			</a>
		</a>
	</div>
</Layout>
